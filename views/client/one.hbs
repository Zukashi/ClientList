<h2>{{client.name}}</h2>

<table class="header-of-left">

    <tb>
            <tr>
                <th>
                    E-mail
                </th>
                <td>
                    <a href="mailto:{{client.mail}}" target="_blank">{{client.mail}}</a>
                </td>
            </tr>


        <tr>
            <th>
                Imie
            </th>
            <td>
                {{client.name}}
            </td>


        </tr>
        <tr>
            <th>
                Data nastepnego kontaktu
            </th>
            <td>
                {{client.nextContactAt}}
            </td>


        </tr>
{{#if client.notes}}
        <tr>
            <th>
                Notatki
            </th>
            <td>
                {{client.notes}}
            </td>


        </tr>
{{/if}}
    </tb>
</table>