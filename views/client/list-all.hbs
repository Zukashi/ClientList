<h2>lista klientow CRM</h2>

<table>
    <thead>
        <tr>
            <th>
                E-mail:
            </th>

            <th>
                Imie:
            </th>

            <th>
                Data nastepnego kontaktu
            </th>
            <th></th>
        </tr>
    </thead>
    <tb>
        {{#each clients}}
            <tr>
                <th>
                    <a href="mailto:{{this.mail}}" target="_blank">{{this.mail}}</a>
                </th>
                <td>
                    <a href="/client/{{this.id}}">{{this.name}}</a>
                </td>
                <td>
                    {{this.nextContactAt}}
                </td>
                <td>
                    <a href="/client/{{this.id}}">Szczegoly</a>
                    <form method="POST" action="/client/{{this.id}}?_method=DELETE">
                        <button type="submit">Usun</button></form>
                </td>



            </tr>

        {{/each}}
    </tb>
</table>
<p>
<form method="GET" action="/client/form/add">
    <button type="submit">Dodaj nowego klienta</button>

</form>

</p>